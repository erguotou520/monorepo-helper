{
  "name": "monorepo-helper",
  "displayName": "monorepo-helper",
  "description": "VSCode extension that helps you work better with monorepo project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:monoDependencies",
    "onView:monoScripts"
  ],
  "main": "./out/extension.js",
  "contributes": {
		"commands": [
			{
				"command": "monoDependencies.refreshDeps",
				"title": "Refresh dependencies",
				"icon": {
					"light": "./assets/light/refresh.svg",
					"dark": "./assets/dark/refresh.svg"
				}
			},
			{
				"command": "monoDependencies.removeDep",
				"title": "Remove dependency"
			},
			{
				"command": "monoDependencies.addDevDep",
				"title": "Add devDependency"
			},
			{
				"command": "monoDependencies.addDep",
				"title": "Add dependency"
			}
		],
    "views": {
      "explorer": [
        {
          "id": "monoDependencies",
          "name": "Monorepo dependencies"
        },
        {
          "id": "monoScripts",
          "name": "Monorepo scripts"
        }
      ]
    },
    "menus": {
			"view/title": [
				{
					"command": "monoDependencies.refreshDeps",
					"when": "view == monoDependencies",
					"group": "navigation"
				}
			],
      "view/item/context": [
        {
          "command": "monoDependencies.removeDep",
          "when": "view == monoDependencies && viewItem == removeDep"
        },
        {
          "command": "monoDependencies.addDep",
          "when": "view == monoDependencies && viewItem == addDep"
        },
        {
          "command": "monoDependencies.addDevDep",
          "when": "view == monoDependencies && viewItem == addDevDep"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@manypkg/get-packages": "^1.1.3"
  }
}
